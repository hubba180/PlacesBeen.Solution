@using PlacesBeen.Models;
<!Doctype html>
<html>
  <head>
    <title>Places List</title>
  </head>
  <body>
    <h1>Places I've Been:</h1>
    <div>
      @if (Model.Count == 0)
        {
          Place portland = new Place("Portland", "Lots of beer!");
          Place seattle = new Place("Seattle", "We saw whales!");
        }
      <ul>
        @foreach (Place element in Model)
        {
          <li>@element.CityName</li>
            <ul>
              <li>@element.Description</li>
            </ul>
        }
      </ul>

      <a href="/places/new">Add a new place</a>
    </div>
  </body>
</html>